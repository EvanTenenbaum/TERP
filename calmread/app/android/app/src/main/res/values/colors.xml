<?xml version="1.0" encoding="utf-8"?>
<!--
    CalmRead Color Palette
    
    Design Principles:
    - Calm, muted colors
    - High contrast for e-ink readability
    - No bright or exciting colors
    - Warm, comfortable tones
-->
<resources>
    <!-- Primary Colors -->
    <color name="primary">#5D6D7E</color>
    <color name="primary_dark">#4A5A6A</color>
    <color name="primary_light">#7D8D9E</color>
    
    <!-- Background Colors -->
    <color name="background_cream">#FDF8F0</color>
    <color name="background_white">#FFFFFF</color>
    <color name="background_light_gray">#F5F5F5</color>
    
    <!-- Text Colors -->
    <color name="text_primary">#2C3E50</color>
    <color name="text_secondary">#7F8C8D</color>
    <color name="text_hint">#BDC3C7</color>
    <color name="text_on_primary">#FFFFFF</color>
    
    <!-- Button Colors -->
    <color name="button_primary">#5D6D7E</color>
    <color name="button_primary_pressed">#4A5A6A</color>
    <color name="button_text">#FFFFFF</color>
    <color name="button_secondary">#E8E8E8</color>
    <color name="button_secondary_text">#2C3E50</color>
    
    <!-- Highlight Colors (for text highlighting) -->
    <color name="highlight_soft">#FFF3CD</color>
    <color name="highlight_line">#E8E4D9</color>
    
    <!-- Status Colors (muted) -->
    <color name="status_complete">#A8C5A8</color>
    <color name="status_in_progress">#C5C5A8</color>
    <color name="status_not_started">#E0E0E0</color>
    
    <!-- Recording Indicator -->
    <color name="recording_active">#C0392B</color>
    <color name="recording_inactive">#BDC3C7</color>
    
    <!-- Dividers and Borders -->
    <color name="divider">#E0E0E0</color>
    <color name="border">#D0D0D0</color>
</resources>
