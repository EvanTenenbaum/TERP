    {"grapheme": "t", "phoneme": "/t/", "lessonId": "lesson_02", "order": 3, "category": "consonant_stop", "rationale": "High frequency, common in CVC words"},
    {"grapheme": "a", "phoneme": "/æ/", "lessonId": "lesson_03", "order": 4, "category": "short_vowel", "rationale": "Most common short vowel, enables first CVC words"},
