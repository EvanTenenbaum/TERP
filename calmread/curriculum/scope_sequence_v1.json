{
  "version": "1.0.0",
  "title": "CalmRead Foundational Reading Curriculum",
  "description": "A 20-lesson structured literacy curriculum focusing on CVC words and short vowels for early readers ages 4-8.",
  "targetAgeRange": {
    "min": 4,
    "max": 8
  },
  "totalLessons": 20,
  "phases": [
    {
      "phaseId": "phase_01",
      "title": "Consonant Introduction",
      "description": "Introduce high-frequency continuous consonants that are easy to blend.",
      "lessonRange": {
        "start": 1,
        "end": 2
      },
      "focus": ["consonant sounds", "letter recognition", "sound production"],
      "prerequisites": ["letter name knowledge helpful but not required"],
      "outcomes": ["identify m, s, t sounds", "produce m, s, t sounds in isolation"]
    },
    {
      "phaseId": "phase_02",
      "title": "First Vowel and CVC Words",
      "description": "Introduce short 'a' and begin blending CVC words.",
      "lessonRange": {
        "start": 3,
        "end": 5
      },
      "focus": ["short vowel a", "CVC blending", "decodable reading"],
      "prerequisites": ["m, s, t sounds mastered"],
      "outcomes": ["blend CVC words with short a", "read simple decodable sentences"]
    },
    {
      "phaseId": "phase_03",
      "title": "Expanding Consonants",
      "description": "Add more consonants while maintaining short 'a' focus.",
      "lessonRange": {
        "start": 6,
        "end": 8
      },
      "focus": ["new consonants p, n, c", "expanded word families", "fluency building"],
      "prerequisites": ["CVC blending with m, s, t, a"],
      "outcomes": ["blend CVC words with expanded consonant set", "increased reading fluency"]
    },
    {
      "phaseId": "phase_04",
      "title": "Second Vowel Introduction",
      "description": "Introduce short 'i' and practice vowel discrimination.",
      "lessonRange": {
        "start": 9,
        "end": 12
      },
      "focus": ["short vowel i", "vowel discrimination", "mixed CVC practice"],
      "prerequisites": ["short a mastery", "consonants m, s, t, p, n, c"],
      "outcomes": ["distinguish short a from short i", "read CVC words with both vowels"]
    },
    {
      "phaseId": "phase_05",
      "title": "Consolidation and Review",
      "description": "Comprehensive review and fluency building with all learned patterns.",
      "lessonRange": {
        "start": 13,
        "end": 15
      },
      "focus": ["cumulative review", "fluency", "confidence building"],
      "prerequisites": ["all prior patterns"],
      "outcomes": ["automatic recognition of learned patterns", "smooth oral reading"]
    },
    {
      "phaseId": "phase_06",
      "title": "Third Vowel and Expansion",
      "description": "Introduce short 'o' and additional consonants.",
      "lessonRange": {
        "start": 16,
        "end": 20
      },
      "focus": ["short vowel o", "new consonants", "three-vowel discrimination"],
      "prerequisites": ["short a and i mastery"],
      "outcomes": ["read CVC words with a, i, o", "decode novel words independently"]
    }
  ],
  "graphemeProgression": [
    {"grapheme": "m", "phoneme": "/m/", "lessonId": "lesson_01", "order": 1, "category": "consonant_continuous", "rationale": "High frequency, continuous sound easy to blend"},
