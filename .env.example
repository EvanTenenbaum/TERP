# Environment example for ERPv3
# Copy to .env.local or environment settings in your deployment platform

# Next.js / Node
NODE_ENV=development
CI=false

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
TEST_DATABASE_URL=postgresql://user:password@host:5432/test_db?sslmode=require

# Auth / RBAC
ENABLE_RBAC=true
RBAC_DEFAULT_ROLE=READ_ONLY

# Feature flags
ENABLE_QA_CRONS=false

# Sentry
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_DEBUG=false

# External APIs
OTREEBA_API_KEY=

# Rate limiting (per-instance)
RATE_LIMIT_TOKENS=60
RATE_LIMIT_WINDOW_MS=60000
