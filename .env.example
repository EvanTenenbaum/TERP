# Database
DATABASE_URL="postgresql://user:password@localhost:5432/terp_dev"

# Authentication
AUTH_JWT_SECRET="your-secret-key-min-32-characters-long"
REQUIRE_AUTH="true"
ALLOW_DEV_BYPASS="false"
DEV_LOGIN_ENABLED="false"

# Object Storage (S3-compatible)
OBJECT_STORAGE_ENDPOINT="https://s3.us-west-2.amazonaws.com"
OBJECT_STORAGE_REGION="us-west-2"
OBJECT_STORAGE_BUCKET="your-bucket-name"
OBJECT_STORAGE_ACCESS_KEY="your-access-key"
OBJECT_STORAGE_SECRET="your-secret-key"

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# Monitoring (Optional)
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Feature Flags (Optional overrides)
# FEATURE_ENABLE_MOBILE_UI="false"
# FEATURE_ENABLE_NEW_DASHBOARD="false"
# FEATURE_ENABLE_ADVANCED_PRICING="false"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

