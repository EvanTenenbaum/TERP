{
  "name": "terp-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TERP ERP System - Monorepo with integrated frontend and backend",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "db:generate": "turbo run db:generate",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:reset": "turbo run db:reset",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "bootstrap": "node scripts/bootstrap.js"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "ts-prune": "^0.10.3",
    "depcheck": "^1.4.7",
    "turbo": "^2.3.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

