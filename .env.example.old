# Database
DATABASE_URL="postgresql://user:password@host:5432/erpv3?sslmode=require"
SHADOW_DATABASE_URL="postgresql://user:password@host:5432/erpv3_shadow?sslmode=require"

# Authentication & Authorization
AUTH_JWT_SECRET="your-secret-key-min-32-chars-long"
AUTH_COOKIE_NAME="auth_token"
REQUIRE_AUTH="true"
ALLOW_DEV_BYPASS="false"
DEV_LOGIN_ENABLED="false"
DEV_BYPASS_USER="dev-user"
DEV_BYPASS_ROLE="SUPER_ADMIN"

# Object Storage (S3-compatible)
OBJECT_STORAGE_ENDPOINT="https://s3.us-west-2.amazonaws.com"
OBJECT_STORAGE_BUCKET="erpv3-attachments"
OBJECT_STORAGE_REGION="us-west-2"
OBJECT_STORAGE_ACCESS_KEY="your-access-key"
OBJECT_STORAGE_SECRET="your-secret-key"

# Local fallback (dev only)
UPLOAD_DIR=".uploads"

# Rate Limiting
RATE_LIMIT_TOKENS="100"
RATE_LIMIT_WINDOW_MS="60000"

# Sentry (optional)
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE="0.2"
SENTRY_DEBUG="false"

# Node Environment
NODE_ENV="development"
