#!/usr/bin/env bash
# Post-push hook for TERP
# Starts automated deployment monitoring with self-healing

CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)

# Only monitor deployments for main branch
if [ "$CURRENT_BRANCH" != "main" ]; then
  exit 0
fi

# Source shell config for environment variables
if [ -f "$HOME/.zshrc" ]; then
  . "$HOME/.zshrc" 2>/dev/null || true
elif [ -f "$HOME/.bashrc" ]; then
  . "$HOME/.bashrc" 2>/dev/null || true
fi

echo ""
echo "üöÄ Post-push: Starting automated deployment monitoring with self-healing..."
echo ""

# Generate dashboard after push
echo "üìä Generating project dashboard..."
if command -v npm &> /dev/null; then
  npm run dashboard:html > /dev/null 2>&1 || echo "‚ö†Ô∏è  Dashboard generation failed (non-blocking)"
  echo "‚úÖ Dashboard updated: dashboard.html"
else
  echo "‚ö†Ô∏è  npm not found, skipping dashboard generation"
fi
echo ""

# Get the commit SHA that was just pushed
COMMIT_SHA=$(git rev-parse HEAD)
STATUS_FILE=".deployment-status-${COMMIT_SHA:0:7}.log"
PID_FILE=".deployment-monitor-${COMMIT_SHA:0:7}.pid"
LOCK_FILE=".deployment-monitor-${COMMIT_SHA:0:7}.lock"

# Check if monitoring already running for this commit
if [ -f "$PID_FILE" ]; then
  OLD_PID=$(cat "$PID_FILE" 2>/dev/null)
  if ps -p "$OLD_PID" > /dev/null 2>&1; then
    echo "‚ö†Ô∏è  Monitoring already running (PID: $OLD_PID)"
    echo "   Status file: $STATUS_FILE"
    exit 0
  else
    # Stale PID file, remove it
    rm -f "$PID_FILE"
  fi
fi

# Check for lock file (another process starting)
if [ -f "$LOCK_FILE" ]; then
  echo "‚ö†Ô∏è  Another monitoring process is starting..."
  sleep 1
  if [ -f "$PID_FILE" ]; then
    echo "‚úÖ Monitoring started by another process"
    exit 0
  fi
fi

# Create lock file
touch "$LOCK_FILE"

# Quick check: Is deployment already in database? (optional, graceful)
if command -v mysql &> /dev/null && [ -n "$DB_HOST" ] && [ -n "$DB_PASS" ]; then
  QUICK_CHECK=$(mysql --host="${DB_HOST}" --port="${DB_PORT:-25060}" \
    --user="${DB_USER:-doadmin}" --password="${DB_PASS}" \
    --database="${DB_NAME:-defaultdb}" --ssl-mode=REQUIRED \
    --silent --skip-column-names \
    -e "SELECT status FROM deployments WHERE commitSha='$COMMIT_SHA' ORDER BY createdAt DESC LIMIT 1;" 2>/dev/null || echo "")
  
  if [ "$QUICK_CHECK" == "success" ]; then
    echo "‚úÖ Deployment already succeeded (from previous push)"
    rm -f "$LOCK_FILE"
    exit 0
  elif [ "$QUICK_CHECK" == "failed" ]; then
    echo "‚ö†Ô∏è  Previous deployment failed - monitoring new deployment..."
  fi
else
  echo "‚ÑπÔ∏è  Database check skipped (credentials not available)"
fi

# Check if auto-heal script exists
if [ -f "scripts/auto-deploy-heal.sh" ]; then
  echo "ü§ñ Auto-heal enabled: Will monitor and fix deployment failures automatically"
  echo "   Max attempts: 3"
  echo "   Safety: Stops on repeated errors to avoid loops"
  echo ""
  
  # Run auto-heal in background
  nohup bash scripts/auto-deploy-heal.sh > "$STATUS_FILE" 2>&1 &
  MONITOR_PID=$!
  
  # Save PID
  echo "$MONITOR_PID" > "$PID_FILE"
  
  # Remove lock file
  rm -f "$LOCK_FILE"
  
  echo "üìä Auto-heal monitoring started (PID: $MONITOR_PID)"
  echo "   Status file: $STATUS_FILE"
  echo "   Check status: tail -f $STATUS_FILE"
  echo "   Stop monitoring: kill $MONITOR_PID"
  echo ""
  echo "üí° The system will:"
  echo "   1. Monitor deployment progress"
  echo "   2. Analyze failures automatically"
  echo "   3. Apply fixes and retry (up to 3 times)"
  echo "   4. Stop if same error repeats"
  echo ""
  echo "üéØ You can continue working - the system will handle deployment"
  echo ""
  
elif [ -f "scripts/monitor-deployment-auto.sh" ]; then
  # Fallback to basic monitoring (no auto-heal)
  echo "üìä Basic monitoring enabled (no auto-heal)"
  nohup bash scripts/monitor-deployment-auto.sh "$COMMIT_SHA" > "$STATUS_FILE" 2>&1 &
  MONITOR_PID=$!
  
  echo "$MONITOR_PID" > "$PID_FILE"
  rm -f "$LOCK_FILE"
  
  echo "üìä Monitoring deployment in background (PID: $MONITOR_PID)"
  echo "   Status file: $STATUS_FILE"
  echo ""
else
  rm -f "$LOCK_FILE"
  echo "‚ö†Ô∏è  Warning: Deployment monitoring scripts not found"
  echo "   Run manually: bash scripts/auto-deploy-heal.sh"
fi

exit 0  # Never block push

